{
	"compilerOptions": {
		"module": "Node16",
		"strict": true,
		"strictPropertyInitialization": false,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"outDir": "build/",
		"preserveConstEnums": true,
		"removeComments": true,
		"rootDir": "lib",
		"sourceMap": true,
		"target": "es2022",
		"declaration": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"esModuleInterop": true
	},
	"include": [
		"lib/**/*"
	]
}
